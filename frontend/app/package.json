{
  "name": "@liquity2/app",
  "private": true,
  "author": "Liquity AG",
  "license": "MIT",
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm build-deps && next build",
    "build-analyze": "ANALYZE=true pnpm build",
    "build-banner": "test -f ./Banner.tsx || cp ./Banner.example.tsx ./Banner.tsx",
    "build-deps": "pnpm build-graphql && pnpm build-uikit && pnpm build-banner && pnpm build-panda",
    "build-graphql": "pnpm graphql-codegen --config graphql-codegen.ts",
    "build-panda": "panda codegen --silent",
    "build-uikit": "cd ../uikit && pnpm build",
    "coverage": "vitest run --coverage ./src",
    "dev": "rm -rf ./.next && next dev --turbopack",
    "fmt": "dprint fmt **/*.{ts,tsx,js,json,html,md}",
    "lint": "pnpm oxlint ./src --import-plugin --nextjs-plugin --react-perf-plugin --allow pedantic",
    "test": "vitest",
    "update-liquity-abis": "pnpm exec tsx ./scripts/update-liquity-abis.ts"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@liquity2/uikit": "workspace:*",
    "@next/bundle-analyzer": "15.3.1",
    "@react-spring/web": "^10.0.0-beta.0",
    "@tanstack/react-query": "^5.75.4",
    "@vercel/analytics": "^1.5.0",
    "@wagmi/core": "^2.17.1",
    "abitype": "^1.0.8",
    "blo": "^2.0.0",
    "connectkit": "^1.9.0",
    "dnum": "^2.14.0",
    "focus-trap-react": "^11.0.3",
    "geist": "^1.4.2",
    "next": "15.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.34.1",
    "ts-pattern": "^5.7.0",
    "valibot": "^1.1.0",
    "viem": "^2.29.0",
    "wagmi": "^2.15.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@pandacss/dev": "^0.53.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.12",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.3",
    "jsdom": "^26.1.0",
    "oxlint": "^0.16.9",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.1.3",
    "zx": "^8.5.3"
  }
}
